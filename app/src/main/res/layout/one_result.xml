<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/dateText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/minMaxText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dateText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pulseText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/minMaxText"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/dateText"/>
</android.support.constraint.ConstraintLayout>